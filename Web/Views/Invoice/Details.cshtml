
@model Core.Models.Invoice
@{
    ViewBag.Title = "Invoice Details";
}

<h2>Invoice Details</h2>

<div>
    <h4>Invoice Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Invoice ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Created At:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>

        <!-- Display other properties as needed -->

        <dt class="col-sm-2">Customer:</dt>
        <dd class="col-sm-10">@Model.customer?.Name</dd>

        <dt class="col-sm-2">Employee:</dt>
        <dd class="col-sm-10">@Model.employee?.Name</dd>
    </dl>
</div>

<div>
    <h4>Invoice Items</h4>
    <hr />
    <button class="btn btn-success" onclick="printTable()">Print</button>
    <table class="table" id="printTable">
        <thead>
            <tr>
                <th>#</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <tr class="itemRow">
                        <td>#</td>
                        <td>@item.ProductId</td>
                        <td>@item.Quantity</td>
                        <td class="itemPrice">@item.Price</td>
                        <!-- Display other item properties as needed -->
                    </tr>
                    
                }
                <!-- Total Price row -->
                <tr id="totalPriceRow">
                    <td colspan="3">Total Price:</td>
                    <td id="totalPriceCell"></td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="4">No items found</td>
                </tr>
            }
        </tbody>
        <tfoot>
            
        </tfoot>
    </table>
</div>


@section Scripts{
    <script src="~/js/viewjs/details.js"></script>
}