@model Core.ViewModels.InvoiceVM
@{
    ViewData["Title"] = "CreateInvoice";
    var employee = ViewBag.EmployeeList;
    var custmer = ViewBag.CustomerList;
}

<h1>Create Invoice</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create" class="form-group">
            <div class="d-flex justify-content-between">
                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="CustomerId">Customer</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="custmer">
                        <option value="0">Choose..</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="EmployeeId">Employee</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="employee">
                        <option value="0">Choose..</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="CreatedAt">Created At</label>
                    <input type="text" asp-for="CreatedAt" class="form-control datepicker" value="" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="CustomerId">Customer</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="custmer">
                        <option value="0">Choose..</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="EmployeeId">Employee</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="employee">
                        <option value="0">Choose..</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" asp-for="CreatedAt">Created At</label>
                    <input type="text" asp-for="CreatedAt" class="form-control datepicker" value="" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save<i class="bi bi-check-lg"></i></button>
                <a asp-action="Index" class="btn btn-outline-danger"><i class="bi bi-x"></i>Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
